            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value=" Confirm delete " class="btn btn-default" style="background-color:#C9C" /> 
                <hr />@Html.ActionLink("Return to list", "Index")
            </div>
        }
    </div>

@model GameSystem.Models.Msg

@{
    ViewBag.Title = "Delete information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <div id="clink">
        <img src="/img/icon_home2.png" />
        <a href="/Home/Index">Home page</a>  >> Delete information</a>
    </div>
    <!--修改信息-->
    <h3>Do you confirm the delete?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt> @Html.DisplayNameFor(model => model.MsgTitle)</dt>
            <dd> @Html.DisplayFor(model => model.MsgTitle)</dd>

            <dt> @Html.DisplayNameFor(model => model.MsgText)</dt>
            <dd>@Html.DisplayFor(model => model.MsgText)</dd>

            <dt> @Html.DisplayNameFor(model => model.MsgType)</dt>
            <dd> @Html.DisplayFor(model => model.MsgType)</dd>

            <dt> @Html.DisplayNameFor(model => model.MsgPhoto)</dt>
